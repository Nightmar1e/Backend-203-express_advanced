<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Welcome <%= name %></h1>
    <nav>
      <a href="/">Home</a>
      <a href="/login">Login with another account</a>
      <a href="/logout">Logout (to be added) ðŸ¥²</a>
    </nav>
  </header>
  <main class="home-page">
    <h2 class="animated-heading">Messages Sent by Users</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Message</th>
        </tr>
      </thead>
      <tbody>
        <% messages.forEach((message) => { %>
          <tr>
            <td><%= message.name %></td>
            <td><%= message.content %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <h2 class="animated-heading">Add a New Message</h2>
    <form action="/" method="post" class="animated-form"> 
      <label for="content">Message:</label>
      <input type="text" id="content" name="content" required>
      <br>
      <button type="submit">Submit</button>
    </form>
  </main>
    <script>
    const form = document.querySelector(".animated-form");
    const heading = document.querySelector(".animated-heading");
  
    function isElementInViewport(el) {
      const rect = el.getBoundingClientRect();
      return (
        rect.top >= 0 &&
        rect.left >= 0 &&
        rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
        rect.right <= (window.innerWidth || document.documentElement.clientWidth)
      );
    }
  
    function handleScroll() {
      if (isElementInViewport(form)) {
        form.classList.add("animated");
        heading.classList.add("animated");
        window.removeEventListener("scroll", handleScroll);
      }
    }
  
    window.addEventListener("scroll", handleScroll);
  </script>
</body>
</html>
